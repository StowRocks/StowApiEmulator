# TMDB API key (v3 auth) — obtain from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# TMDB API read access token (v4 auth / Bearer token) — obtain from https://www.themoviedb.org/settings/api
TMDB_API_TOKEN=your_tmdb_api_read_access_token_here

# Comma-separated list of TMDB show/movie IDs to serve content for
ALLOWED_TMDB_IDS=12345,67890
