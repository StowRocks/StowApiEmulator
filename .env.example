# TMDB API key (v3 auth) — obtain from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# TMDB API read access token (v4 auth / Bearer token) — obtain from https://www.themoviedb.org/settings/api
TMDB_API_TOKEN=your_tmdb_api_read_access_token_here

# Comma-separated list of TMDB show/movie IDs to serve content for
ALLOWED_TMDB_IDS=12345,67890

# Enable YouTube link conversion to direct streams (optional, default: false)
# When enabled, converts YouTube URLs to direct .mp4 streams via ytdl-core
# Note: Works locally but may fail in serverless environments (Vercel)
# Note: This may violate YouTube's Terms of Service
ENABLE_YOUTUBE_LINK_CONVERSION=false

# Optional: Postgres database for persisting ratings and favorites
POSTGRES_URL=postgresql://user:password@host:5432/database

# Optional: Redis for TMDB API response caching
REDIS_URL=redis://default:password@host:6379
